// Momentum Habit Tracker - Prisma Schema
// This schema defines the data model for the Momentum application

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User model - represents authenticated users
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  avatarUrl     String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts Account[]
  sessions Session[]
  domains  Domain[]

  @@map("users")
}

// NextAuth.js Account model
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// NextAuth.js Session model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// NextAuth.js VerificationToken model
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Domain model - life areas that users track (e.g., Exercise, Reading, Deep Work)
model Domain {
  id        String   @id @default(cuid())
  userId    String
  name      String
  color     String
  icon      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  completions Completion[]
  goals       Goal[]
  streaks     Streak[]

  @@index([userId])
  @@map("domains")
}

// Completion model - daily checkmarks indicating habit completion
model Completion {
  id        String   @id @default(cuid())
  domainId  String
  date      DateTime @db.Date
  createdAt DateTime @default(now())

  // Relations
  domain Domain @relation(fields: [domainId], references: [id], onDelete: Cascade)

  // Ensure one completion per domain per day
  @@unique([domainId, date])
  @@index([domainId])
  @@index([date])
  @@map("completions")
}

// Goal model - weekly targets for domains (e.g., "5 out of 7 days")
model Goal {
  id             String   @id @default(cuid())
  domainId       String   @unique
  targetDays     Int
  totalDays      Int      @default(7)
  motivationNote String?  @db.Text
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  domain Domain @relation(fields: [domainId], references: [id], onDelete: Cascade)

  @@map("goals")
}

// Streak model - tracking consecutive weeks of goal achievement
model Streak {
  id            String   @id @default(cuid())
  domainId      String   @unique
  currentStreak Int      @default(0)
  longestStreak Int      @default(0)
  updatedAt     DateTime @updatedAt

  // Relations
  domain Domain @relation(fields: [domainId], references: [id], onDelete: Cascade)

  @@map("streaks")
}
